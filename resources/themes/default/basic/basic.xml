<?xml version="1.0" encoding="UTF-8"?>
<Window size="315,380" caption="0,0,0,35">
  <VBox bkcolor="bk_wnd_darkcolor">
    <HBox width="stretch" height="auto" bkcolor="bk_wnd_lightcolor">
      <Control height="auto" width="auto" margin="4" valign="center" bkimage="logo_18x18.png" />
      <Label text="LOL接受对局助手" margin="2,0,0,0" valign="center" />
      <Control />
      <Button class="btn_wnd_close" name="closebtn1" margin="0,0,0,0" />
    </HBox>


    <HBox>
      <VBox width="120" margin="20,0,0,10">
        <!-- 这是左边 功能区-->
        <VBox name="tools_area" width="auto">
          <CheckBox text="自动接收对局" name="_ui_accept" selected="true" selectedtextcolor="red"
            margin="0,10,0,0" />
          <CheckBox text="自动再来一局" name="_ui_nextgame" selected="false" selectedtextcolor="red"
            margin="0,10,0,0" />
          <CheckBox text="自动匹配" name="_ui_searchqueue" selected="false" selectedtextcolor="red"
            margin="0,10,0,0" />
          <CheckBox text="自动锁定英雄" name="_ui_lockchampion" selected="false" selectedtextcolor="red"
            margin="0,10,0,0" />
          <CheckBox text="对局助手" name="matching_helper" selected="true" selectedtextcolor="red"
            margin="0,10,0,0" />

          <Label text="目前预选英雄" name="_ui_champion" width="110" endellipsis="false"
            normaltextcolor="black" margin="0,10,0,0" />
          <Box bordersize="1" bordercolor="splitline_level1" width="110" height="25"
            margin="0,10,0,0"
            padding="2,2,2,2">
            <RichEdit name="edit_total" height="30" margin="0,3" align="left"
              normaltextcolor="black" multiline="false"
              promptmode="true" prompttext="搜索英雄" promptcolor="lightcolor" />
          </Box>
          <Box>
            <VListBox class="list" name="list"></VListBox>
          </Box>
        </VBox>
      </VBox>

      <VBox width="180" bkcolor="bk_wnd_lightcolor">
        <!-- 这是右边 显示区-->
        <VBox width="stretch" height="120">
          <Control width="100" height="100" name="summoner-icon" halign="center" valign="center"
            bordercolor="gray" bordersize="2,2,2,2" />
        </VBox>

        <VBox height="40">
          <HBox margin="10,5,0,0">
            <Label text="召唤师:" width="auto" endellipsis="false" normaltextcolor="black" />
            <Label name="player_name" text="未知召唤师" width="auto" endellipsis="false"
              normaltextcolor="black"
              margin="10,0,0,0" />
          </HBox>
          <HBox margin="10,5,0,0">
            <Label text="等级:" width="auto" endellipsis="false" normaltextcolor="black" />
            <Label name="player_level" text="0" width="auto" endellipsis="false"
              normaltextcolor="black"
              margin="10,0,0,0" />
          </HBox>
        </VBox>

        <VBox height="95" margin="10,0,0,0">
          <HBox margin="10,5,0,0">
            <Label text="单双排:" width="auto" endellipsis="false" normaltextcolor="black" />
            <Label name="RANKED_SOLO_5x5" text="N/A" width="auto" endellipsis="false"
              normaltextcolor="black" />
          </HBox>
          <HBox margin="10,5,0,0">
            <Label text="灵活组排:" width="auto" endellipsis="false" normaltextcolor="black" />
            <Label name="RANKED_FLEX_SR" text="N/A" width="auto" endellipsis="false"
              normaltextcolor="black" />
          </HBox>
          <HBox margin="10,5,0,0">
            <Label text="云顶之奕:" width="auto" endellipsis="false" normaltextcolor="black" />
            <Label name="RANKED_TFT" text="N/A" width="auto" endellipsis="false"
              normaltextcolor="black" />
          </HBox>
          <HBox margin="10,5,0,0">
            <Label text="云顶之奕-狂暴:" width="auto" endellipsis="false" normaltextcolor="black" />
            <Label name="RANKED_TFT_TURBO" text="N/A" width="auto" endellipsis="false"
              normaltextcolor="black" />
          </HBox>
          <HBox margin="10,5,0,0">
            <Label text="云顶之奕-双人:" width="auto" endellipsis="false" normaltextcolor="black" />
            <Label name="RANKED_TFT_DOUBLE_UP" text="N/A" width="auto" endellipsis="false"
              normaltextcolor="black" />
          </HBox>
        </VBox>

        <VBox margin="10,5,0,0">
          <Label width="auto" height="10" endellipsis="false" normaltextcolor="black"
            name="_download_progress" />
          <CheckBox text="O No 隐藏功能暂时不开启" name="_dynamic_skin" selected="false"
            selectedtextcolor="red"
          />
        </VBox>
        <VBox margin="10,5,0,0">
          <Label text="游戏状态:" width="auto" endellipsis="false" normaltextcolor="black" />
          <Label name="display_game_status" text="N/A" width="auto" endellipsis="false"
            normaltextcolor="black" />
        </VBox>

      </VBox>
    </HBox>
  </VBox>
</Window>