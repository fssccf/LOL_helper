<?xml version="1.0" encoding="UTF-8"?>
<Window size="330,225" caption="0,0,0,35">
    <VBox bkcolor="bk_wnd_darkcolor">
        <HBox width="stretch" height="auto" bkcolor="bk_wnd_lightcolor">
            <Control height="auto" width="auto" margin="4" valign="center" bkimage="logo_18x18.png" />
            <Label text="选择英雄优先级" margin="2,0,0,0" valign="center" />
            <Control />
            <Button class="btn_wnd_close" name="closebtn" margin="0,0,0,0" />
        </HBox>

        <VBox bkcolor="bk_wnd_darkcolor">
            <HBox height="auto" margin="20,5,0,0">
                <Label text="查找英雄:" endellipsis="false" normaltextcolor="black" />
                <RichEdit class="input" multiline="false" name="_input_champ_name"
                    align="left" margin="5,0,0,0" width="100" />
                <Button class="_normal_btn_class" name="_check_champ" text="查找" width="45"
                    height="20"
                    normaltextcolor="black" margin="0,0,20,0" />
            </HBox>
            <HBox height="auto" margin="20,5,0,0">
                <Label text="英雄名:" endellipsis="false" normaltextcolor="red" />
                <RichEdit class="edit" readonly="true" multiline="false"
                    name="_lova_champ_name"
                    align="left" margin="5,0,0,0" />
            </HBox>
            <HBox height="auto" margin="20,5,0,0">
                <Label text="好感度(越高选择优先级越高,反之亦然):" endellipsis="false" normaltextcolor="red" />
                <RichEdit class="input" multiline="false" name="_lova_score" number="true"
                    align="left" margin="5,0,0,0" width="40" />
                <Control />
                <Button class="_normal_btn_class" name="_lova_add" text="添加" width="45" height="20"
                    normaltextcolor="black" margin="0,0,20,0" />
            </HBox>

            <VBox margin="20,5,0,0" width="200" height="100" bkcolor="bk_wnd_darkcolor">
                <RichEdit class="input" multiline="true" name="_output_lova_champs"
                    align="left" readonly="true" vscrollbar="true" />
            </VBox>
            <HBox margin="0,5,0,0">
                <Control />
                <Button class="_normal_btn_class" name="select_no" text="取消" width="45" height="20"
                    normaltextcolor="black" />
                <Button class="_normal_btn_class" name="select_yes" text="确定" width="45" height="20"
                    normaltextcolor="black" margin="5,0,10,5" />
            </HBox>
        </VBox>
    </VBox>
</Window>